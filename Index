<script>
    const bases = document.querySelectorAll('.dna-base');
    let selected = null;
    let score = 0;

    bases.forEach(base => {
        base.addEventListener('click', () => {
            if (!selected) {
                selected = base;
                base.style.background = '#ffcc80';
            } else if (selected === base) {
                return;
            } else {
                if (selected.dataset.pair === base.textContent) {
                    alert('‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á! üéâ');
                    score += 10;
                    selected.style.background = '#a5d6a7';
                    base.style.background = '#a5d6a7';
                } else {
                    alert('‡∏ú‡∏¥‡∏î üò¢');
                    selected.style.background = '#e0f7fa';
                    base.style.background = '#e0f7fa';
                }
                selected = null;
                document.getElementById('score').textContent = `‡∏Ñ‡∏∞‡πÅ‡∏ô‡∏ô: ${score}`;
            }
        });
    });
</script>

